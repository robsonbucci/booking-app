{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    // "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "include": [
    "src",
  "src/**/*.ts",
  "__tests__/**/*.ts"
],
"exclude": [
  "node_modules",
  "dist"
]
}
